# build time tests for sconclusion plugin
# see http://mochajs.org/

sconclusion = require '../client/sconclusion'
expect = require 'expect.js'

describe 'sconclusion plugin', ->

  describe 'expand', ->

    it 'can make itallic', ->
      result = sconclusion.expand 'hello *world*'
      expect(result).to.be 'hello <i>world</i>'
