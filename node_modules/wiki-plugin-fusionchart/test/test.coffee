fusionchart = require '../client/fusionchart'
expect = require 'expect.js'

describe 'fusionchart plugin', ->

  describe 'expand', ->

    it 'can make itallic', ->
      result = fusionchart.expand 'hello *world*'
      expect(result).to.be 'hello <i>world</i>'
