# build time tests for newconclusion plugin
# see http://mochajs.org/

newconclusion = require '../client/newconclusion'
expect = require 'expect.js'

describe 'newconclusion plugin', ->

  describe 'expand', ->

    it 'can make itallic', ->
      result = newconclusion.expand 'hello *world*'
      expect(result).to.be 'hello <i>world</i>'
