# build time tests for logicfinder plugin
# see http://mochajs.org/

logicfinder = require '../client/logicfinder'
expect = require 'expect.js'

describe 'logicfinder plugin', ->

  describe 'expand', ->

    it 'can make itallic', ->
      result = logicfinder.expand 'hello *world*'
      expect(result).to.be 'hello <i>world</i>'
