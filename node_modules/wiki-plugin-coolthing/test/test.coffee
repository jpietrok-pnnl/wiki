coolthing = require '../client/coolthing'
expect = require 'expect.js'

describe 'coolthing plugin', ->

  describe 'expand', ->

    it 'can make itallic', ->
      result = coolthing.expand 'hello *world*'
      expect(result).to.be 'hello <i>world</i>'
